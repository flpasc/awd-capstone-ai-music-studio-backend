# Production environment variables for backend
# Copy this file to .env.production.local and fill the secrets
# Do not commit .env.production.local file to version control
NODE_ENV=production

# Backend Server
PORT=3001
BCRYPT_SALT_ROUNDS=10

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai-music-studio-bucket
DB_USER=postgres
DB_PASSWORD=
DB_LOGGING=false
DB_SYNCHRONIZE=false

# S3 compatible storage
S3_BUCKET_NAME=ai-music-studio-bucket
MINIO_ENDPOINT=storage.googleapis.com
MINIO_PORT=443
MINIO_SSL=true
MINIO_ACCESSKEY=
MINIO_SECRETKEY=

# Frontend URL for CORS
CORS_ORIGIN=http://localhost:3000

# Video Worker API URL
VIDEO_WORKER_URL=http://localhost:3002

# 3rd Party API Keys
FAL_KEY=
